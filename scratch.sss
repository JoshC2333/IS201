/* style.css */

body {
  background-color: #1c1c1c;
  color: #f5f5f5;
  font-family: 'Verdana', sans-serif;
  margin: 0;
  padding: 0;
}

a {
  color: #ffa500;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

h1, h2 {
  color: #ffd700;
  text-align: center;
}

.container {
  width: 85%;
  margin: auto;
  padding: 20px;
}

.section {
  background-color: #2e2e2e;
  padding: 20px;
  margin: 20px 0;
  border-radius: 12px;
}

img {
  width: 100%;
  max-width: 600px;
  display: block;
  margin: 10px auto;
  border-radius: 12px;
}
